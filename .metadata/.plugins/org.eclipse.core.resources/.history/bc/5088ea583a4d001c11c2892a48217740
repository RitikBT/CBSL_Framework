package org.cbsl.utility;

import java.lang.reflect.Method;

import org.testng.ITestResult;
import org.testng.annotations.AfterMethod;
import org.testng.annotations.BeforeMethod;

public class BaseClass {
	
protected WebUtill utill=new WebUtill();
	
	
	@BeforeMethod(alwaysRun =true )
	public void launch() {
		String browserName="firefox";
		System.out.println(browserName+" is launching............");
		utill.launchBrowser(browserName);
		utill.setUrl("http://localhost:8888");
		
	}
	
	@AfterMethod(alwaysRun = true)
	public void closeWindow(ITestResult result, Method methobj) {
		boolean methodStatus=result.isSuccess();
		String methodName=methobj.getName();
		if(methodStatus==false) {
			utill.takeSnapshot(methodName);
		}
		utill.quitBrowser();	
	}

}
